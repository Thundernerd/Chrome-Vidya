{
    "manifest_version": 2,
    "name": "Vidya",
    "short_name": "Vidya",
    "version": "1.0",

    "description": "YouTube-like controls for HTML5 video elements. Also saves the current time of the video.",
    

    "content_scripts": [{
        "matches": ["*://*/*"],
        "js": ["scripts/jquery.min.js", "scripts/main.js"]
    }],

    "permissions": [
        "tabs",
        "storage",
        "*://*/*"
    ]
}
